.scroll-list {
    overflow: hidden;
}

.topbar {
    margin-top: 0;
    background: #fff;
}

.topbar-item {
    color: #333;
    text-align: center;
    padding: 10px 0;
}

.topbar-item.active {
    color: #479de6;
}

.swiper_box {
    width: 100%;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
}
.order-top{
  font-size: 12px;
  padding: 5px;
}
.order-top text{
  float: right;
  color: #ff5400
}
.order-shop{
  width: 730rpx;
  margin: 0 auto;
  background: #f2f2f2;

}
.order-shop-item{
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  float: left;
  margin: 5px;
  background: #fff;
}
.order-shop-item image{
  width: 100rpx;
  height: 100rpx;
  margin: 5px auto;
}
.order-shop-item text{
  width: 200rpx;
  display: block;
  font-size: 12px;
}