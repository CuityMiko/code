@import "../../../wxParse/wxParse.wxss";
.swiper-box {
    width: 100%;
    height: 320px;
}

.swiper-box .slide-image {
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}

.shopping-container {
    padding: 0 30rpx;
}

.shopping-container .name {
    margin: 10px 0;
    font-weight: bold;
    color: #333;
}
.shopping-container .names{
  font-size: 12px;
  color:#999
}
.shopping-container .price {
    margin: 10px 0;
    font-weight: normal;
    color: orangered;
    font-size: 24px;
}

.shopping-container .remark {
    margin: 10px 0;
    color: #939393;
    line-height: 22px;
}

.swiper-container {
    margin: 0 auto;
    position: relative;
    overflow: hidden;
}

.swiper-pager {
    position: absolute;
    right: 20px;
    bottom: 20px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(0,0,0,.3);
    color: #fff;
    font-family: Arial, Helvetica, sans-serif;
    text-align: center;
    line-height: 40px;
    font-size: 12px;
}
.weui-navbar__item.weui-bar__item_on {
    color: #D62156!important;
}
.weui-navbar__slider{
 background: #D62156!important;
}
.weui-navbar{
    background: #fff
}
.addcart{
    z-index: 99999;
}
.shopping-container2{
    padding-bottom: 100px;
}
.shopping-arrts{
    width: 750rpx;
    min-height: 30px;
    line-height: 30px;
    background: #fff;
    border-bottom: 1px solid #ccc;
}
.shopping-arrts text{
    font-size: 13px;
    color:#333;
    text-align: left;
    display: inline-block;
}
.shopping-arrts text:first-child{
    width: 200rpx;
    text-indent: 10px;
    color: #999
}
.shopping-arrts text:last-child{
    width: 550rpx;
}
.shop-num{
    float: right;
    font-size: 13px;
    color: #939393;
    margin-right: 10rpx;
